<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"

    android:background="#B66767"
    android:backgroundTint="#9F6363"
    app:cardElevation="15dp">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B38080"
        android:backgroundTint="#FAD8AA">

        <TextView
            android:id="@+id/usernameholder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Username"

            android:textSize="20dp"
            android:textStyle="italic"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/feedbackholder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="4dp"
            android:text="Feedback"
            android:textAlignment="center"
            android:textSize="16dp" />

        <Button
            android:id="@+id/Editbut"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:text="Edit" />

        <Button
            android:id="@+id/Delbut"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:text="Delete" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>