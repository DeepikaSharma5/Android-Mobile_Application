<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/paymentdelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:elegantTextHeight="true"
        android:fontFamily="monospace"
        android:background="@drawable/gradient_background"
        android:text="@string/paymentdelete"
        android:textAlignment="center"
        android:textColor="#060505"
        android:textSize="38sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payid"
            android:layout_width="100dp"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="18dp"
            android:fontFamily="casual"
            android:text="@string/payid"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gif" />

        <EditText
            android:id="@+id/textpay"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:inputType="phone"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonserch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonround"
            android:backgroundTint="#AAF8AD"
            android:fontFamily="monospace"
            android:text="@string/button1"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number02">

        </Button>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="500dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FCEBEB"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@+id/rl1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="cursive"
                        android:text="@string/num"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="19dp"
                        android:hint="XXXX"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="#969698"
                        android:textSize="19dp" />

                    <EditText
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="19dp"
                        android:layout_toEndOf="@+id/text1"
                        android:hint="XXXX"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="#969698"
                        android:textSize="19dp" />

                    <EditText
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="19dp"
                        android:layout_toEndOf="@+id/text2"
                        android:hint="XXXX"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="#969698"
                        android:textSize="19dp" />

                    <EditText
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="19dp"
                        android:layout_toEndOf="@+id/text3"
                        android:hint="XXXX"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="#969698"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="cursive"
                        android:text="@string/holder"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_marginStart="171dp"
                        android:layout_marginTop="18dp"
                        android:hint="Name on card"
                        android:inputType="text"
                        android:textColorHint="#969698"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/expire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text5"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="cursive"
                        android:text="@string/expire"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text5"
                        android:layout_marginStart="151dp"
                        android:layout_marginTop="20dp"
                        android:hint="MM"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColorHint="#969698"
                        android:textSize="19dp" />

                    <EditText
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text5"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="20dp"
                        android:hint="YY"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColorHint="#969698"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/tot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expire"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="cursive"
                        android:text="AMOUNT"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text7"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="cursive"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/deletepayment"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/expire"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="57dp"
                        android:background="@drawable/buttonround"
                        android:backgroundTint="#FF6A5F"
                        android:text="@string/deletepayment" />

                    <Button
                        android:id="@+id/viewpayment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expire"
                        android:layout_marginStart="135dp"
                        android:layout_marginTop="57dp"
                        android:background="@drawable/buttonround"
                        android:backgroundTint="#965CFE"
                        android:text="@string/viewpayment" />

                    <Button
                        android:id="@+id/cancelpaymentdel"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/expire"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="57dp"
                        android:background="@drawable/buttonround"
                        android:backgroundTint="#FB171E"
                        android:text="@string/cancelpaymentdel" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>